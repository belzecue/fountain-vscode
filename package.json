{
    "name": "fountain",
    "displayName": "Fountain",
    "description": "Add Fountain language support",
    "version": "1.0.0",
    "publisher": "massivedanger",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "fountain",
